<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="SlidingButton">
        <attr name="sliding_text" format="string|reference" />
        <attr name="sliding_text_login" format="string|reference" />
        <attr name="sliding_text_swipe" format="string|reference" />
        <attr name="sliding_text_size" format="dimension|reference" />
        <attr name="sliding_text_size_login" format="dimension|reference" />
        <attr name="sliding_text_size_swipe" format="dimension|reference" />
        <attr name="sliding_text_color" format="color|reference" />
        <attr name="sliding_text_color_login" format="color|reference" />
        <attr name="sliding_text_color_swipe" format="color|reference" />
        <attr name="sliding_text_background" format="color|reference" />
        <attr name="sliding_text_background_login" format="color|reference" />
        <attr name="sliding_text_fontFamily" format="string|reference" />
        <attr name="sliding_text_textStyle" format="flags">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="sliding_text_paddingStart" format="dimension|reference" />
        <attr name="sliding_text_paddingTop" format="dimension|reference" />
        <attr name="sliding_text_paddingEnd" format="dimension|reference" />
        <attr name="sliding_text_paddingBottom" format="dimension|reference" />

        <attr name="sliding_button_width" format="dimension|reference" />
        <attr name="sliding_button_height" format="dimension|reference" />
        <attr name="sliding_button_icon" format="reference" />
        <attr name="sliding_button_icon_tint" format="color|reference" />
        <attr name="sliding_icon_scaleType" format="enum">
            <enum name="centerInside" value="7" />
            <enum name="centerCrop" value="6" />
            <enum name="center" value="5" />
            <enum name="fitCenter" value="3" />
            <enum name="fitXY" value="1" />
        </attr>

        <attr name="sliding_button_background" format="color|reference" />
        <attr name="sliding_button_marginStart" format="dimension|reference" />
        <attr name="sliding_button_marginTop" format="dimension|reference" />
        <attr name="sliding_button_marginEnd" format="dimension|reference" />
        <attr name="sliding_button_marginBottom" format="dimension|reference" />
        <attr name="sliding_button_paddingStart" format="dimension|reference" />
        <attr name="sliding_button_paddingTop" format="dimension|reference" />
        <attr name="sliding_button_paddingEnd" format="dimension|reference" />
        <attr name="sliding_button_paddingBottom" format="dimension|reference" />

        <attr name="sliding_showTrack" format="boolean" />
        <attr name="sliding_trackBackground" format="color|reference" />
        <attr name="sliding_trackBackgroundTint" format="color|reference" />
        <attr name="sliding_trackExtendTo" format="enum">
            <enum value="0" name="container"/>
            <enum value="1" name="button"/>
        </attr>
        <attr name="sliding_enabledTextAlpha" format="boolean" />
        <attr name="sliding_corner_radius" format="dimension|reference"/>
    </declare-styleable>

    <attr name="slidingButtonStyle" format="reference" />




























<!--    slide to act-->
    <declare-styleable name="SlideToActView">
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="text_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="area_margin" format="dimension" />
        <attr name="icon_margin" format="dimension" />
        <attr name="inner_color" format="color" />
        <attr name="outer_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="border_radius" format="dimension" />
        <attr name="slider_height" format="dimension" />
        <attr name="animation_duration" format="integer" />
        <attr name="bump_vibration" format="integer" />
        <attr name="slider_locked" format="boolean" />
        <attr name="slider_reversed" format="boolean" />
        <attr name="slider_icon" format="string" />
        <attr name="slider_icon_color" format="color" />
        <attr name="rotate_icon" format="boolean" />
        <attr name="animate_completion" format="boolean" />
        <attr name="text_appearance" format="reference" />
        <attr name="complete_icon" format="reference" />
    </declare-styleable>
    <declare-styleable name="SlideToActViewTheme">
        <attr name="slideToActViewStyle" format="reference" />
    </declare-styleable>


<!--    progress layout-->
    <declare-styleable name="progressLayout">
        <attr name="emptyColor" format="color" />
        <attr name="loadedColor" format="color" />
        <attr name="maxProgress" format="integer" />
        <attr name="autoProgress" format="boolean"/>
    </declare-styleable>
</resources>