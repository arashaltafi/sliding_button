<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlidingButton">
        <item name="android:background">@drawable/default_slidingcontainer_background</item>
        <item name="sliding_text">@string/default_text_slide</item>
        <item name="sliding_text_size">@dimen/default_text_size</item>
        <item name="sliding_button_width">@dimen/default_image_height</item>
        <item name="sliding_button_height">@dimen/default_image_height</item>
        <item name="sliding_button_background">@drawable/default_slidingbutton_background</item>
        <item name="sliding_button_icon">@drawable/ic_default_slide_icon</item>
        <item name="sliding_button_icon_tint">?attr/colorAccent</item>
        <item name="sliding_enabledTextAlpha">true</item>
    </style>

    <style name="SlidingButton.Trackable">
        <item name="sliding_showTrack">true</item>
    </style>

    <style name="SlidingButton.Trackable.Container">
        <item name="sliding_trackExtendTo">container</item>
    </style>

    <style name="SlidingButton.Rounded">
        <item name="sliding_corner_radius">8dp</item>
    </style>

    <style name="SlidingButton.RoundedTrackabale">
        <item name="sliding_corner_radius">8dp</item>
        <item name="sliding_showTrack">true</item>
    </style>


<!--    slide to act-->

    <style name="SlideToActView">
        <item name="text">SlideToActView</item>
        <item name="text_size">@dimen/slidetoact_default_text_size</item>
        <item name="area_margin">@dimen/slidetoact_default_area_margin</item>
        <item name="inner_color">?android:colorBackground</item>
        <item name="outer_color">?colorAccent</item>
        <item name="slider_locked">false</item>
    </style>

</resources>