<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_sliding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/slidingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        tools:textSize="@dimen/default_text_size" />

    <View
        android:id="@+id/slidingIndicator"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_image_height"
        android:layout_gravity="end|center_vertical"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible"
        android:layoutDirection="rtl"/>


    <RelativeLayout
        android:id="@+id/slidingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:gravity="center|start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSwipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/ic_swipe" />

            <LinearLayout
                android:id="@+id/lnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/slidingTextLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slidingTextSwipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/swipe_left"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>